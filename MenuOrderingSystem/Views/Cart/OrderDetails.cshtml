@model MenuOrderingSystem.Models.Order

@{
    ViewBag.Title = "Order Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* 1. Status Badge Styles (Copied from Admin for Consistency) */
    .badge-pill-custom {
        padding: 8px 16px;
        border-radius: 30px;
        font-size: 0.85rem;
        font-weight: 700;
        text-transform: uppercase;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        letter-spacing: 0.5px;
    }

    .badge-pending {
        background-color: #fffbeb;
        color: #b45309;
        border: 1px solid #fcd34d;
    }

    .badge-paid {
        background-color: #d1e7dd;
        color: #0f5132;
        border: 1px solid #badbcc;
    }

    .badge-preparing {
        background-color: #cfe2ff;
        color: #084298;
        border: 1px solid #b6d4fe;
    }

    .badge-ready {
        background-color: #e2d9f3;
        color: #432874;
        border: 1px solid #d0c2eb;
    }

    .badge-completed {
        background-color: #d1e7dd;
        color: #146c43;
        border: 1px solid #a3cfbb;
    }

    .badge-cancelled {
        background-color: #f8d7da;
        color: #842029;
        border: 1px solid #f5c2c7;
    }

    .badge-default {
        background-color: #f3f4f6;
        color: #4b5563;
        border: 1px solid #e5e7eb;
    }

    /* 2. Hover Effects */
    .hover-gold:hover {
        color: #c5a059 !important; /* Chagee Gold */
        text-decoration: underline !important;
    }

    .hover-scale:hover {
        transform: translateY(-2px);
        transition: transform 0.2s;
    }




    
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <div class="mb-4">
                <a href="/History/Index" class="text-decoration-none text-muted hover-gold">
                    <i class="fas fa-arrow-left me-2"></i> Back to History
                </a>
            </div>

            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">

                <div class="card-header bg-white border-bottom p-4 d-flex justify-content-between align-items-center flex-wrap gap-3">
                    <div>
                        <small class="text-uppercase text-muted fw-bold" style="letter-spacing: 1px;">Order Receipt</small>
                        <h3 class="fw-bold mb-0 text-dark">#@Model.OrderID</h3>
                        <span class="text-muted small">
                            <i class="far fa-calendar-alt me-1"></i> @Model.OrderTime.ToString("dd MMM yyyy, hh:mm tt")
                        </span>
                    </div>

                    <div>
                        @switch (Model.Status)
                        {
                            case "Pending":
                                <span class="badge-pill-custom badge-pending"><i class="fas fa-hourglass-half"></i> Pending</span>
                                break;
                            case "Paid":
                                <span class="badge-pill-custom badge-paid"><i class="fas fa-check-circle"></i> Paid</span>
                                break;
                            case "Preparing":
                                <span class="badge-pill-custom badge-preparing"><i class="fas fa-fire"></i> Preparing</span>
                                break;
                            case "Ready":
                                <span class="badge-pill-custom badge-ready"><i class="fas fa-shopping-bag"></i> Ready</span>
                                break;
                            case "Completed":
                                <span class="badge-pill-custom badge-completed"><i class="fas fa-check-double"></i> Completed</span>
                                break;
                            case "Cancelled":
                                <span class="badge-pill-custom badge-cancelled"><i class="fas fa-times-circle"></i> Cancelled</span>
                                break;
                            default:
                                <span class="badge-pill-custom badge-default">@Model.Status</span>
                                break;
                        }
                    </div>
                </div>

                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="bg-light text-uppercase small text-muted">
                                <tr>
                                    <th class="py-3 ps-4" style="width: 50%;">Item Description</th>
                                    <th class="py-3 text-center">Qty</th>
                                    <th class="py-3 text-end pe-4">Subtotal</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.OrderItems)
                                {
                                    var unitPrice = item.Size == "Large" ? item.Drink.PriceLarge : item.Drink.PriceRegular;

                                    <tr>
                                        <td class="ps-4 py-3">
                                            <div class="d-flex align-items-center">
                                                <img src="~/drinks/@item.Drink.ImageURL"
                                                     alt="@item.Drink.Name"
                                                     class="rounded-3 shadow-sm me-3"
                                                     style="width: 60px; height: 60px; object-fit: cover;">

                                                <div>
                                                    <h6 class="fw-bold mb-1 text-dark">@item.Drink.Name</h6>
                                                    <div class="d-flex flex-wrap gap-1">
                                                        <span class="badge bg-light text-dark border fw-normal">@item.Size</span>
                                                        <span class="badge bg-light text-dark border fw-normal">@item.SugarLevel</span>
                                                        <span class="badge bg-light text-dark border fw-normal">@item.IceLevel</span>
                                                    </div>
                                                </div>
                                            </div>
                                        </td>

                                        <td class="text-center text-muted fw-bold">
                                            x @item.Quantity
                                        </td>

                                        <td class="text-end pe-4">
                                            <div class="fw-bold text-dark">RM @((item.Quantity * unitPrice).ToString("N2"))</div>
                                            <small class="text-muted d-block" style="font-size: 0.75rem;">
                                                RM @unitPrice.ToString("N2") / each
                                            </small>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="card-footer bg-light p-4">
                    <div class="row justify-content-end">
                        <div class="col-md-5">
                            <div class="d-flex justify-content-between mb-2 text-muted">
                                <span>Subtotal</span>
                                <span>RM @Model.TotalAmount.ToString("N2")</span>
                            </div>
                            <hr class="text-muted opacity-25">
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="fs-5 fw-bold text-dark">Grand Total</span>
                                <span class="fs-4 fw-bold" style="color: #1a3c1e;">
                                    RM @Model.TotalAmount.ToString("N2")
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="mt-4 text-center d-flex justify-content-center gap-3">
                <a href="/Drink/Index" class="btn btn-outline-success rounded-pill px-4 py-2 hover-scale">
                    <i class="fas fa-shopping-bag me-2"></i> Order Again
                </a>
            </div>

        </div>
    </div>
</div>