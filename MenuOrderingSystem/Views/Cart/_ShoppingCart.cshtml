@using MenuOrderingSystem.Models.ViewModels
@model IEnumerable<CartItem>

@if (!Model.Any())
{
    <div class="text-center py-5">
        <div class="mb-3 text-muted opacity-25">
            <i class="fas fa-shopping-basket fa-4x"></i>
        </div>
        <h3 class="fw-bold text-muted">Your cart is empty</h3>
        <p class="text-muted mb-4">Looks like you haven't added any drinks yet.</p>
        <a href="/Drink/Index" class="btn btn-success rounded-pill px-5 py-3 shadow hover-lift" 
           style="background-color: var(--chagee-green); border: none;">
            Start Ordering
        </a>
    </div>
}
else
{
    <div class="row g-5">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-light text-uppercase small text-muted">
                            <tr>
                                <th class="py-3 ps-4" style="min-width: 250px;">Beverage</th>
                                <th class="py-3 text-center">Qty</th>
                                <th class="py-3 text-end">Subtotal</th>
                                <th class="py-3 pe-4 text-center" style="width: 50px;">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var i in Model)
                            {
                                var list = new SelectList(Enumerable.Range(1, 10), i.Quantity);
                                <tr>
                                    <td class="ps-4 py-3">
                                        <div class="d-flex align-items-center">
                                            <img src="~/drinks/@i.Drink.ImageURL" 
                                                 alt="@i.DrinkName" 
                                                 class="rounded-3 shadow-sm me-3" 
                                                 style="width: 70px; height: 70px; object-fit: cover;">
                                            
                                            <div>
                                                <h6 class="fw-bold mb-1 text-dark">@i.DrinkName</h6>
                                                
                                                <div class="d-flex flex-wrap gap-1 mt-1">
                                                    <span class="badge bg-light text-dark border fw-normal">@i.Size</span>
                                                    <span class="badge bg-light text-dark border fw-normal">@i.IceLevel</span>
                                                    <span class="badge bg-light text-dark border fw-normal">@i.SugarLevel</span>
                                                </div>
                                                <small class="text-muted d-block mt-1">
                                                    Price: RM @i.Price.ToString("0.00")
                                                </small>
                                            </div>
                                        </div>
                                    </td>

                                    <td class="text-center" style="width: 120px;">
                                        <form data-ajax="true"
                                              data-ajax-update="#target"
                                              method="post"
                                              action="/Cart/UpdateCart">
                                            
                                            @Html.Hidden("DrinkID", i.Drink.DrinkID)
                                            @Html.Hidden("Size", i.Size)
                                            @Html.Hidden("IceLevel", i.IceLevel)
                                            @Html.Hidden("SugarLevel", i.SugarLevel)
                                            
                                            <div class="position-relative">
                                                @Html.DropDownList("Quantity", list, 
                                                    new { 
                                                        @class = "form-select form-select-sm border-success text-center fw-bold text-success", 
                                                        style = "border-radius: 20px; cursor: pointer;" 
                                                    })
                                            </div>
                                        </form>
                                    </td>

                                    <td class="text-end fw-bold text-dark fs-5">
                                        RM @((i.Price * i.Quantity).ToString("0.00"))
                                    </td>

                                    <td class="text-center pe-4">
                                        <form data-ajax="true" 
                                              data-ajax-update="#target" 
                                              data-ajax-confirm="Are you sure you want to remove this item?"
                                              method="post" 
                                              action="/Cart/RemoveFromCart">
                                              
                                            <input type="hidden" name="DrinkID" value="@i.Drink.DrinkID" />
                                            <input type="hidden" name="Size" value="@i.Size" />
                                            <input type="hidden" name="IceLevel" value="@i.IceLevel" />
                                            <input type="hidden" name="SugarLevel" value="@i.SugarLevel" />

                                            <button type="submit" class="btn btn-link text-danger p-0 hover-scale" title="Remove Item">
                                                <i class="fas fa-trash-alt"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card border-0 shadow-lg rounded-4 text-white" 
                 style="background: linear-gradient(145deg, var(--chagee-green), #1e3c1a);">
                <div class="card-body p-4">
                    <h4 class="fw-bold mb-4" style="font-family: 'Playfair Display', serif;">Order Summary</h4>
                    
                    <div class="d-flex justify-content-between mb-3 text-white-50">
                        <span>Subtotal</span>
                        <span>RM @Model.Sum(i => i.Price * i.Quantity).ToString("0.00")</span>
                    </div>
                    
                    <hr class="border-white opacity-25">

                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <span class="fs-5">Total</span>
                        <span class="display-6 fw-bold">
                            RM @Model.Sum(i => i.Price * i.Quantity).ToString("0.00")
                        </span>
                    </div>

                    <a href="/Cart/Checkout" class="btn btn-light w-100 py-3 rounded-pill fw-bold text-success shadow hover-scale">
                        Proceed to Checkout <i class="fas fa-arrow-right ms-2"></i>
                    </a>
                    
                    <div class="text-center mt-3">
                        <a href="/Drink/Index" class="text-white-50 small text-decoration-none hover-white">
                            Continue Shopping
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}