@model MenuOrderingSystem.Models.Drink

@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <!-- Top Row: Image + Basic Info -->
    <div class="row mb-4">
        <!-- Image -->
        <div class="col-md-5 text-center">
            <img img src="~/drinks/@(Model.ImageURL)"
                 asp-append-version="true"
                 class="img-fluid rounded shadow"
                 style="max-height:400px; object-fit:cover;" />
        </div>

        <!-- Name + Description -->
        <div class="col-md-7 d-flex flex-column justify-content-center">
            <h2 class="fw-bold">@Model.Name</h2>
            <p class="text-muted">@Model.Description</p>
        </div>
    </div>

    <!-- Second Row: Options & Add to Cart -->
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <form method="post" asp-action="UpdateCart" asp-controller="Cart">
                <input type="hidden" name="drinkId" value="@Model.DrinkID" />

                <!-- Size -->
                <div class="mb-3">
                    <label class="form-label fw-bold">Size</label>
                    <select name="size" class="form-select">
                        <option value="Regular">Regular - RM @Model.PriceRegular.ToString("0.00")</option>
                        <option value="Large">Large - RM @Model.PriceLarge.ToString("0.00")</option>
                    </select>
                </div>

                <!-- Ice Level -->
                <div class="mb-3">
                    <label class="form-label fw-bold">Ice Level</label>
                    <select name="iceLevel" class="form-select">
                        <option>No Ice</option>
                        <option>Less Ice</option>
                        <option>Normal Ice</option>
                        <option>Extra Ice</option>
                    </select>
                </div>

                <!-- Sugar Level -->
                <div class="mb-3">
                    <label class="form-label fw-bold">Sugar Level</label>
                    <select name="sugarLevel" class="form-select">
                        <option>0%</option>
                        <option>25%</option>
                        <option>50%</option>
                        <option>75%</option>
                        <option>100%</option>
                    </select>
                </div>

                <!-- Quantity -->
                <div class="mb-3">
                    <label class="form-label fw-bold">Quantity</label>
                    <input type="number" name="quantity" value="1" min="1"
                           class="form-control" style="max-width:120px;" />
                </div>

                <!-- Submit -->
                <button type="submit" class="btn btn-success btn-lg w-100">
                    🛒 Add to Cart
                </button>
            </form>
        </div>
    </div>
</div>
