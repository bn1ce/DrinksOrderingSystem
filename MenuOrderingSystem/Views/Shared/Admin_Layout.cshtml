@using MenuOrderingSystem.Models
@inject DB _context

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Admin Portal</title>
    <link rel="icon" type="image/png" href="@Url.Content("~/Images/logo.png")" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@400;700&family=Playfair+Display:wght@700&display=swap" rel="stylesheet">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <style>
        :root {
            --admin-bg: #1a3c1e; /* Deep Chagee Green */
            --admin-accent: #c5a059; /* Gold */
            --admin-text: #ffffff;
            --admin-hover: rgba(197, 160, 89, 0.15);
        }

        body {
            font-family: 'Lato', sans-serif;
            background-color: #f4f6f8; /* Light grey for content contrast */
            padding-top: 70px; /* Space for fixed navbar */
        }

        /* 1. Admin Navbar Styling */
        .admin-navbar {
            background: var(--admin-bg) !important;
            border-bottom: 3px solid var(--admin-accent);
            box-shadow: 0 4px 20px rgba(0,0,0,0.2);
            padding: 0.5rem 0;
        }

        /* Brand Styling */
        .navbar-brand {
            font-family: 'Playfair Display', serif;
            color: var(--admin-accent) !important;
            font-size: 1.4rem;
            letter-spacing: 0.5px;
            display: flex;
            align-items: center;
        }

            .navbar-brand img {
                height: 40px;
                width: auto;
                margin-right: 12px;
                filter: brightness(0) invert(1); /* Make logo white if it's transparent */
            }

        .brand-badge {
            background: var(--admin-accent);
            color: #000;
            font-size: 0.65rem;
            padding: 2px 6px;
            border-radius: 4px;
            margin-left: 8px;
            font-family: 'Lato', sans-serif;
            font-weight: 800;
            text-transform: uppercase;
            letter-spacing: 1px;
            vertical-align: middle;
        }

        /* Navigation Links */
        .nav-link {
            color: rgba(255, 255, 255, 0.8) !important;
            font-weight: 500;
            font-size: 0.95rem;
            padding: 10px 18px !important;
            border-radius: 8px;
            transition: all 0.3s ease;
            margin: 0 4px;
            display: flex;
            align-items: center;
            gap: 8px;
        }

            .nav-link i {
                font-size: 1.1rem;
                opacity: 0.7;
                transition: 0.3s;
            }

            /* Hover & Active States */
            .nav-link:hover {
                color: #fff !important;
                background: var(--admin-hover);
                transform: translateY(-2px);
            }

                .nav-link:hover i {
                    color: var(--admin-accent);
                    opacity: 1;
                }

            .nav-link.active {
                color: #fff !important;
                background: rgba(255,255,255,0.1);
                border-left: 3px solid var(--admin-accent); /* Left border indicator */
                border-radius: 4px; /* Slight rounded */
            }

                .nav-link.active i {
                    color: var(--admin-accent);
                    opacity: 1;
                }

        /* Dropdown Styling */
        .dropdown-menu {
            border: none;
            box-shadow: 0 10px 30px rgba(0,0,0,0.15);
            border-radius: 12px;
            overflow: hidden;
            margin-top: 10px;
        }

        .dropdown-item {
            padding: 10px 20px;
            font-size: 0.95rem;
            border-left: 3px solid transparent;
            transition: 0.2s;
        }

            .dropdown-item:hover {
                background-color: #f8f9fa;
                border-left-color: var(--admin-accent);
                color: var(--admin-bg);
            }

        .dropdown-header {
            background: #f1f1f1;
            font-weight: 700;
            color: #666;
            font-size: 0.75rem;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        /* Footer */
        .admin-footer {
            background: #151515;
            color: #888;
            font-size: 0.85rem;
            border-top: 1px solid #333;
        }
    </style>

    @RenderSection("head", false)
</head>
<body>

    <nav class="navbar navbar-expand-lg fixed-top admin-navbar navbar-dark">
        <div class="container-fluid px-4">

            <a class="navbar-brand" href="/Admin/Dashboard">
                <img src="~/Images/logo.png" alt="CHAGEE">
                <span>CHAGEE</span>
                <span class="brand-badge">ADMIN</span>
            </a>

            <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#adminNav">
                <span class="navbar-toggler-icon"></span>
            </button>

                <ul class="navbar-nav ms-auto align-items-center">
                    @if (User.Identity!.IsAuthenticated)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="profileDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <div class="d-flex align-items-center gap-2">
                                    <div class="bg-white text-dark rounded-circle d-flex align-items-center justify-content-center"
                                         style="width: 32px; height: 32px; font-weight: bold;">
                                        @User.Identity.Name.Substring(0, 1).ToUpper()
                                    </div>
                                    <span class="d-none d-md-block small">@User.Identity.Name</span>
                                </div>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end slideIn" aria-labelledby="profileDropdown">
                                <li><h6 class="dropdown-header">Account</h6></li>
                                <li><a class="dropdown-item" href="/Account/Profile"><i class="fas fa-user-cog me-2 text-muted"></i> My Profile</a></li>
                                <li><a class="dropdown-item" href="/Account/UpdatePassword"><i class="fas fa-key me-2 text-muted"></i> Change Password</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item text-danger" href="/Account/Logout"><i class="fas fa-sign-out-alt me-2"></i> Logout</a></li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link text-warning" href="/Account/Login">
                                <i class="fas fa-sign-in-alt"></i> Login
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <main class="py-4">
        @RenderBody()
    </main>

    <footer class="admin-footer py-3 text-center fixed-bottom">
        <div class="container">
            <small>&copy; @DateTime.Now.Year CHAGEE Admin Portal. All rights reserved.</small>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script src="/js/jquery.min.js"></script>
    <script src="/js/jquery.unobtrusive-ajax.min.js"></script>

    <script>
        // Active Link Highlighter
        document.addEventListener('DOMContentLoaded', function() {
            const currentPath = location.pathname;
            const navLinks = document.querySelectorAll('.nav-link');

            navLinks.forEach(link => {
                if(currentPath.includes(link.getAttribute('href')) && link.getAttribute('href') !== '#') {
                    link.classList.add('active');
                }
            });
        });
    </script>

    @if (TempData["Info"] != null)
    {
        <div class="toast-container position-fixed bottom-0 end-0 p-3" style="z-index: 1050;">
            <div class="toast show" role="alert" aria-live="assertive" aria-atomic="true">
                <div class="toast-header bg-success text-white">
                    <i class="fas fa-bell me-2"></i>
                    <strong class="me-auto">Notification</strong>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast"></button>
                </div>
                <div class="toast-body">
                    @TempData["Info"]
                </div>
            </div>
        </div>
    }

    @RenderSection("foot", false)
</body>
</html>