@*
    Auth Layout: used for Login, Register, ResetPassword, etc.
    Provides fullscreen background, dark overlay, centered card container.
*@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - CHAGEE</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        /* Background wrapper */
        body, html {
            height: 100%;
            margin: 0;
            font-family: Arial, sans-serif;
        }

        .auth-wrapper {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100%;
            background: url('/images/homebg.png') no-repeat center center;
            background-size: cover;
            position: relative;
        }

            /* Dark overlay */
            .auth-wrapper::before {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: rgba(0, 0, 0, 0.4);
            }

        /* Auth card */
        .auth-card {
            position: relative;
            z-index: 1;
            background: #fff;
            padding: 40px;
            border-radius: 10px;
            max-width: 420px;
            width: 100%;
            box-shadow: 0 4px 20px rgba(0,0,0,0.3);
            text-align: center;
        }

        .auth-logo img {
            width: 120px;
            height: auto;
            margin-bottom: 15px;
        }

        .auth-title {
            font-size: 22px;
            font-weight: bold;
            margin-bottom: 8px;
        }

        .auth-subtitle {
            font-size: 14px;
            color: #666;
            margin-bottom: 25px;
        }

        .form-control {
            padding: 12px;
            border-radius: 6px;
            font-size: 14px;
        }

        .btn-auth {
            width: 100%;
            padding: 12px;
            font-size: 15px;
            font-weight: bold;
            background: #000;
            color: #fff;
            border: none;
            border-radius: 6px;
        }

            .btn-auth:hover {
                background: #222;
            }

        .auth-footer {
            margin-top: 20px;
            font-size: 14px;
        }

            .auth-footer a {
                color: #0070f3;
                text-decoration: none;
            }

        .validation {
            font-size: 12px;
            color: red;
        }
    </style>

    @RenderSection("head", false)
</head>
<body>
    <div class="auth-wrapper">
        <div class="auth-card">
            <!-- Render content from each page -->
            @RenderBody()
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("foot", false)
</body>
</html>
