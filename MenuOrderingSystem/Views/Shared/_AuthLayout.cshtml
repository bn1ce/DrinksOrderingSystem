@*
    Auth Layout: Premium Redesign for Login/Register
*@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link rel="icon" type="image/png" href="@Url.Content("~/Images/logo.png")" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@400;700&family=Playfair+Display:wght@700&display=swap" rel="stylesheet">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <style>
        :root {
            --chagee-green: #2d5a27;
            --chagee-gold: #c5a059;
            --glass-white: rgba(255, 255, 255, 0.95);
        }

        body, html {
            height: 100%;
            margin: 0;
            font-family: 'Lato', sans-serif;
        }

        /* 1. Dynamic Background */
        .auth-wrapper {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            background: url('/Images/homebg.png') no-repeat center center;
            background-size: cover;
            position: relative;
        }

            /* 2. Premium Overlay (Gradient Black to Green tint) */
            .auth-wrapper::before {
                content: "";
                position: absolute;
                inset: 0;
                background: linear-gradient(135deg, rgba(0,0,0,0.6) 0%, rgba(45, 90, 39, 0.4) 100%);
                backdrop-filter: blur(3px); /* Subtle blur to focus on card */
            }

        /* 3. Glassmorphic Card */
        .auth-card {
            position: relative;
            z-index: 2;
            background: var(--glass-white);
            padding: 40px 50px;
            border-radius: 24px;
            max-width: 450px;
            width: 90%;
            box-shadow: 0 15px 35px rgba(0,0,0,0.2), 0 5px 15px rgba(0,0,0,0.1);
            text-align: center;
            border: 1px solid rgba(255, 255, 255, 0.6);
            /* Entrance Animation */
            animation: fadeInUp 0.8s cubic-bezier(0.2, 0.8, 0.2, 1);
        }

        /* Logo Styling */
        .auth-logo img {
            width: 100px;
            height: auto;
            margin-bottom: 20px;
            filter: drop-shadow(0 4px 6px rgba(0,0,0,0.1));
        }

        /* Typography */
        .auth-title {
            font-family: 'Playfair Display', serif;
            font-size: 28px;
            color: var(--chagee-green);
            margin-bottom: 10px;
        }

        .auth-subtitle {
            font-size: 15px;
            color: #6c757d;
            margin-bottom: 30px;
            line-height: 1.5;
        }

        /* Inputs */
        .form-control {
            padding: 14px 18px;
            border-radius: 12px;
            border: 1px solid #e0e0e0;
            font-size: 15px;
            background-color: #f8f9fa;
            transition: all 0.3s ease;
        }

            .form-control:focus {
                background-color: #fff;
                border-color: var(--chagee-gold);
                box-shadow: 0 0 0 4px rgba(197, 160, 89, 0.15);
            }

        /* Primary Button */
        .btn-auth {
            width: 100%;
            padding: 14px;
            font-size: 16px;
            font-weight: 700;
            letter-spacing: 0.5px;
            background: var(--chagee-green);
            color: #fff;
            border: none;
            border-radius: 12px;
            transition: all 0.3s ease;
            margin-top: 10px;
            box-shadow: 0 4px 15px rgba(45, 90, 39, 0.3);
        }

            .btn-auth:hover {
                background: #234a20;
                transform: translateY(-2px);
                box-shadow: 0 8px 20px rgba(45, 90, 39, 0.4);
            }

        /* Footer Links */
        .auth-footer {
            margin-top: 25px;
            font-size: 14px;
            color: #888;
        }

            .auth-footer a {
                color: var(--chagee-gold);
                text-decoration: none;
                font-weight: 600;
                transition: color 0.2s;
            }

                .auth-footer a:hover {
                    color: var(--chagee-green);
                    text-decoration: underline;
                }

        .validation {
            font-size: 13px;
            color: #dc3545;
            text-align: left;
            margin-top: 5px;
            display: block;
        }

        /* Animation Keyframes */
        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(40px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Form spacing helpers */
        .form-group {
            margin-bottom: 1.2rem;
            text-align: left;
        }

        .form-label {
            font-size: 0.9rem;
            font-weight: 600;
            color: #444;
            margin-bottom: 6px;
            display: block;
        }
    </style>

    @RenderSection("head", false)
</head>
<body>
    <div class="auth-wrapper">
        <div class="auth-card">

            <div class="auth-logo">
                <a href="/Home/Index" title="Return to Home" class="d-inline-block transition-transform">
                    <img src="~/Images/logo.png" alt="CHAGEE" />
                </a>
            </div>

            @RenderBody()

            <div class="mt-4 pt-3 border-top text-muted small" style="font-size: 0.75rem;">
                &copy; @DateTime.Now.Year CHAGEE. All rights reserved.
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function() {
            var firstInput = document.querySelector("input:not([type='hidden'])");
            if(firstInput) firstInput.focus();
        });
    </script>

    @RenderSection("foot", false)
</body>
</html>