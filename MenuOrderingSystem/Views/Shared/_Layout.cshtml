@using MenuOrderingSystem.Models
@inject DB _context

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link rel="icon" type="image/png" href="@Url.Content("~/Images/logo.png")" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@400;700&family=Playfair+Display:wght@700&display=swap" rel="stylesheet">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <style>
        :root {
            --chagee-gold: #c5a059; /* Premium Gold */
            --chagee-green: #2d5a27; /* Deep Tea Green */
            --chagee-red: #b83b3b; /* Traditional Red */
            --chagee-dark: #2c2c2c; /* Ink Black */
            --glass-bg: rgba(255, 255, 255, 0.95);
        }

        body {
            font-family: 'Lato', sans-serif;
            background-color: #f8f9fa;
            color: var(--chagee-dark);
            padding-top: 80px; /* Space for fixed navbar */
        }

        h1, h2, h3, h4, h5, .navbar-brand {
            font-family: 'Playfair Display', serif;
        }

        /* 1. Glassmorphic Navbar */
        .navbar {
            background: var(--glass-bg) !important;
            backdrop-filter: blur(12px);
            -webkit-backdrop-filter: blur(12px);
            border-bottom: 1px solid rgba(197, 160, 89, 0.2);
            box-shadow: 0 4px 20px rgba(0,0,0,0.05);
            padding: 0.8rem 0;
            transition: all 0.4s ease;
        }

        /* 2. Navigation Links */
        .nav-link {
            font-size: 0.95rem;
            font-weight: 600;
            color: var(--chagee-dark) !important;
            margin: 0 4px;
            padding: 10px 18px !important;
            border-radius: 50px;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 8px;
        }

            .nav-link i {
                font-size: 1.1rem;
                color: #888;
                transition: transform 0.3s ease;
            }

            /* Hover State */
            .nav-link:hover {
                background-color: rgba(197, 160, 89, 0.1);
                color: var(--chagee-gold) !important;
                transform: translateY(-2px);
            }

                .nav-link:hover i {
                    color: var(--chagee-gold);
                    transform: scale(1.1);
                }

            /* Active State */
            .nav-link.active {
                background: linear-gradient(135deg, #d4af37 0%, #c5a059 100%);
                color: white !important;
                box-shadow: 0 4px 15px rgba(197, 160, 89, 0.4);
            }

                .nav-link.active i {
                    color: white !important;
                }

            /* Cart Animation */
            .nav-link[href*="Cart"] i {
                animation: float 4s ease-in-out infinite;
            }

        /* FIX: Use @@keyframes to escape Razor syntax */
        @@keyframes float {
            0%, 100% {
                transform: translateY(0px);
            }

            50% {
                transform: translateY(-3px);
            }
        }

        /* Toast Notification Styling */
        .toast-container {
            z-index: 9999;
        }

        .toast {
            border-radius: 12px;
            overflow: hidden;
        }
    </style>

    @RenderSection("head", false)
</head>
<body>
    <nav class="navbar navbar-expand-lg fixed-top">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center" href="/Home/Index">
                <img src="~/Images/logo.png" alt="CHAGEE" style="height: 45px; width: auto;" />
                <span class="ms-2 d-none d-sm-block fw-bold" style="color: #2c2c2c; letter-spacing: 1px;">CHAGEE</span>
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto align-items-center">

                    <li class="nav-item">
                        <a class="nav-link" href="/Drink/Index">
                            <i class="fas fa-mug-hot"></i> <span>Menu</span>
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="/Cart/ShoppingCart">
                            <i class="fas fa-shopping-bag"></i> <span>Cart</span>
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="/Feedback/Index">
                            <i class="fas fa-comment-dots"></i> <span>Feedback</span>
                        </a>
                    </li>

                    @if (User.Identity!.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/History">
                                <i class="fas fa-receipt"></i> <span>Orders</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Account/Profile">
                                <i class="fas fa-user-circle"></i> <span>Profile</span>
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item ms-lg-2">
                            <a class="nav-link px-4" href="/Account/Login" style="border: 1px solid var(--chagee-gold); color: var(--chagee-gold) !important;">
                                <i class="fas fa-sign-in-alt"></i> <span>Login</span>
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <main>
        @RenderBody()
    </main>

    <footer class="bg-dark text-white text-center py-4 mt-5">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6 text-md-start">
                    <span class="fw-bold" style="font-family:'Playfair Display', serif;">CHAGEE</span>
                </div>
                <div class="col-md-6 text-md-end text-muted small">
                    &copy; @DateTime.Now.Year - Premium Tea Experience
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/jquery.min.js"></script>
    <script src="/js/jquery.unobtrusive-ajax.min.js"></script>
    <script src="/js/jquery.validate.min.js"></script>
    <script src="/js/jquery.validate.unobtrusive.min.js"></script>
    <script src="/js/app.js"></script>

    <script>
        // Active Link Highlighter
        document.addEventListener('DOMContentLoaded', function() {
            const currentLocation = location.pathname;
            const navLinks = document.querySelectorAll('.nav-link');
            navLinks.forEach(link => {
                if(link.getAttribute('href') === currentLocation) {
                    link.classList.add('active');
                }
            });

            // Navbar Scroll Effect
            window.addEventListener('scroll', function() {
                const navbar = document.querySelector('.navbar');
                if (window.scrollY > 20) {
                    navbar.style.padding = '0.5rem 0';
                    navbar.style.background = 'rgba(255, 255, 255, 0.98)';
                } else {
                    navbar.style.padding = '0.8rem 0';
                    navbar.style.background = 'rgba(255, 255, 255, 0.95)';
                }
            });
        });
    </script>

    @if (TempData["Info"] != null)
    {
        <div class="toast-container position-fixed top-0 start-50 translate-middle-x p-3" style="z-index: 10000; margin-top: 20px;">

            <div id="premiumToast" class="toast align-items-center text-white border-0 shadow-lg" role="alert" aria-live="assertive" aria-atomic="true"
                 style="background: linear-gradient(135deg, #2d5a27 0%, #1a3c1e 100%);
                            border-radius: 12px;
                            min-width: 350px;
                            overflow: hidden;
                            border-bottom: 3px solid #c5a059;">
                <div class="d-flex">
                    <div class="toast-body d-flex align-items-center py-3 px-4">
                        <div class="rounded-circle bg-white d-flex justify-content-center align-items-center me-3"
                             style="width: 32px; height: 32px; min-width: 32px;">
                            <i class="fas fa-check" style="color: #2d5a27; font-size: 1rem;"></i>
                        </div>

                        <div>
                            <h6 class="mb-0 fw-bold" style="font-family: 'Playfair Display', serif; letter-spacing: 0.5px;">Success</h6>
                            <small style="color: rgba(255,255,255,0.9); font-size: 0.9rem;">@TempData["Info"]</small>
                        </div>
                    </div>

                    <button type="button" class="btn-close btn-close-white me-3 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
            </div>
        </div>

        <script>
            document.addEventListener('DOMContentLoaded', function () {
                var toastEl = document.getElementById('premiumToast');
                var toast = new bootstrap.Toast(toastEl, { delay: 3500 }); // Show for 3.5 seconds
                toast.show();
            });
        </script>
    }

    @RenderSection("foot", false)

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    @if (TempData["CartMessage"] != null)
    {
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                Swal.fire({
                    title: 'Added to Cart!',
                    text: '@Html.Raw(TempData["CartMessage"])',
                    icon: 'success',
                    iconColor: '#2d5a27', // CHAGEE Green

                    // Button Styling
                    confirmButtonText: 'Continue Shopping',
                    confirmButtonColor: '#2d5a27',

                    showCancelButton: true,
                    cancelButtonText: 'View Cart',
                    cancelButtonColor: '#c5a059', // Gold

                    // Animation
                    showClass: { popup: 'animate__animated animate__fadeInDown' },
                    hideClass: { popup: 'animate__animated animate__fadeOutUp' }
                }).then((result) => {
                    // Redirect to Cart if they click "View Cart"
                    if (result.dismiss === Swal.DismissReason.cancel) {
                        window.location.href = '/Cart/ShoppingCart';
                    }
                });
            });
        </script>
    }
</body>
</html>