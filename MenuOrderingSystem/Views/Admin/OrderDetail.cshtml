@model MenuOrderingSystem.Models.Order

@{
    ViewBag.Title = "Order Details";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<style>
    /* 1. Header Card (Green Gradient) */
    .order-header-card {
        background: linear-gradient(135deg, #1a3c1e 0%, #0f2b12 100%);
        color: white;
        border-radius: 16px;
        padding: 30px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.15);
        margin-bottom: 25px;
        position: relative;
        overflow: hidden;
    }

        .order-header-card::after {
            content: '';
            position: absolute;
            top: -30px;
            right: -30px;
            width: 150px;
            height: 150px;
            background: rgba(197, 160, 89, 0.1);
            border-radius: 50%;
        }

    /* 2. Content Card (White) */
    .content-card {
        background: #fff;
        border-radius: 16px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.05);
        border: 1px solid rgba(0,0,0,0.03);
        overflow: hidden;
    }

    /* 3. Typography */
    .label-text {
        color: rgba(255,255,255,0.7);
        font-size: 0.85rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 4px;
        font-weight: 600;
    }

    .value-text {
        font-size: 1.1rem;
        font-weight: 600;
        color: #fff;
    }

    .total-amount {
        font-family: 'Playfair Display', serif;
        font-size: 2.2rem;
        color: #c5a059; /* Gold */
        font-weight: 700;
        line-height: 1;
    }

    /* 4. Consistent Status Badges */
    .badge-pill {
        padding: 8px 16px;
        border-radius: 30px;
        font-size: 0.85rem;
        font-weight: 700;
        text-transform: uppercase;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        letter-spacing: 0.5px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }

    .badge-pending {
        background-color: #fffbeb;
        color: #b45309;
        border: 1px solid #fcd34d;
    }

    .badge-paid {
        background-color: #d1e7dd;
        color: #0f5132;
        border: 1px solid #badbcc;
    }

    .badge-preparing {
        background-color: #cfe2ff;
        color: #084298;
        border: 1px solid #b6d4fe;
    }

    .badge-ready {
        background-color: #e2d9f3;
        color: #432874;
        border: 1px solid #d0c2eb;
    }

    .badge-completed {
        background-color: #d1e7dd;
        color: #146c43;
        border: 1px solid #a3cfbb;
    }

    .badge-cancelled {
        background-color: #f8d7da;
        color: #842029;
        border: 1px solid #f5c2c7;
    }

    .badge-default {
        background-color: #f3f4f6;
        color: #4b5563;
        border: 1px solid #e5e7eb;
    }

    /* 5. Table Styling */
    .table-custom {
        width: 100%;
        margin-bottom: 0;
    }

        .table-custom thead th {
            background-color: #f8f9fa;
            color: #666;
            font-weight: 700;
            text-transform: uppercase;
            font-size: 0.75rem;
            padding: 15px 25px;
            border-bottom: 2px solid #eee;
            letter-spacing: 0.5px;
        }

        .table-custom tbody td {
            padding: 15px 25px;
            vertical-align: middle;
            color: #333;
            border-bottom: 1px solid #f0f0f0;
            font-size: 0.95rem;
        }

        .table-custom tbody tr:last-child td {
            border-bottom: none;
        }

        .table-custom tbody tr:hover {
            background-color: #fafafa;
        }
</style>

<div class="container py-4">

    <div class="order-header-card">
        <div class="row align-items-center">

            <div class="col-md-6 mb-3 mb-md-0">
                <div class="d-flex align-items-center gap-3 mb-3">
                    <h2 class="mb-0 fw-bold" style="font-family: 'Playfair Display', serif;">Order #@Model.OrderID</h2>

                    @switch (Model.Status)
                    {
                        case "Pending":
                            <span class="badge-pill badge-pending"><i class="fas fa-hourglass-half"></i> Pending</span>
                            break;
                        case "Paid":
                            <span class="badge-pill badge-paid"><i class="fas fa-check-circle"></i> Paid</span>
                            break;
                        case "Preparing":
                            <span class="badge-pill badge-preparing"><i class="fas fa-fire"></i> Preparing</span>
                            break;
                        case "Ready":
                            <span class="badge-pill badge-ready"><i class="fas fa-shopping-bag"></i> Ready</span>
                            break;
                        case "Completed":
                            <span class="badge-pill badge-completed"><i class="fas fa-check-double"></i> Completed</span>
                            break;
                        case "Cancelled":
                            <span class="badge-pill badge-cancelled"><i class="fas fa-times-circle"></i> Cancelled</span>
                            break;
                        default:
                            <span class="badge-pill badge-default">@Model.Status</span>
                            break;
                    }
                </div>
                <div class="d-flex align-items-center gap-2 text-white-50">
                    <i class="far fa-clock"></i>
                    <span>@Model.OrderTime.ToString("dd MMM yyyy, h:mm tt")</span>
                </div>
            </div>

            <div class="col-md-6 text-md-end">
                <div class="row g-3 justify-content-end">
                    <div class="col-auto text-end">
                        <div class="label-text">Customer</div>
                        <div class="value-text">@Model.MemberEmail</div>
                    </div>
                    <div class="col-auto border-start border-secondary ps-4">
                        <div class="label-text">Total Amount</div>
                        <div class="total-amount">RM @Model.TotalAmount.ToString("F2")</div>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <h5 class="fw-bold mb-3 text-secondary ps-2">
                <i class="fas fa-list-ul me-2"></i>Order Items (@Model.OrderItems.Count)
            </h5>

            <div class="content-card">
                <div class="table-responsive">
                    <table class="table table-custom">
                        <thead>
                            <tr>
                                <th style="width: 35%;">Drink Name</th>
                                <th>Size</th>
                                <th>Sugar</th>
                                <th>Ice</th>
                                <th class="text-center">Qty</th>
                                <th class="text-end">Subtotal</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.OrderItems)
                            {
                                // Price Calculation Logic (Size based)
                                decimal unitPrice = (item.Size == "Large") ? item.Drink.PriceLarge : item.Drink.PriceRegular;
                                decimal subtotal = unitPrice * item.Quantity;

                                <tr>
                                    <td>
                                        <div class="fw-bold text-dark">@item.Drink.Name</div>
                                        <small class="text-muted">RM @unitPrice.ToString("F2") / unit</small>
                                    </td>
                                    <td><span class="badge bg-light text-dark border">@item.Size</span></td>
                                    <td>@item.SugarLevel</td>
                                    <td>@item.IceLevel</td>
                                    <td class="text-center fw-bold">x @item.Quantity</td>
                                    <td class="text-end fw-bold text-success">
                                        RM @subtotal.ToString("F2")
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot style="background-color: #fafafa; border-top: 2px solid #eee;">
                            <tr>
                                <td colspan="5" class="text-end fw-bold text-uppercase text-secondary pe-4">Total</td>
                                <td class="text-end fw-bold fs-5 text-dark">RM @Model.TotalAmount.ToString("F2")</td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4">
        <a asp-action="Orders" class="btn btn-outline-secondary px-4 py-2 rounded-pill fw-bold" style="border: 2px solid #e5e7eb;">
            <i class="fas fa-arrow-left me-2"></i> Back to Orders
        </a>
    </div>

</div>