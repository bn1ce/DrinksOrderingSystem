@model List<MenuOrderingSystem.Models.Member>

@{
    ViewBag.Title = "Members Management";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<style>
    /* 1. Page Header */
    .page-header-card {
        background: linear-gradient(135deg, #1a3c1e 0%, #0f2b12 100%);
        color: white;
        padding: 30px;
        border-radius: 16px;
        margin-bottom: 25px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.15);
        display: flex;
        justify-content: space-between;
        align-items: center;
        position: relative;
        overflow: hidden;
    }

        .page-header-card::after {
            content: '';
            position: absolute;
            top: -40px;
            right: -40px;
            width: 180px;
            height: 180px;
            background: rgba(197, 160, 89, 0.1);
            border-radius: 50%;
        }

    /* 2. Table Card */
    .table-card {
        background: #fff;
        border-radius: 16px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.05);
        border: 1px solid rgba(0,0,0,0.03);
        overflow: hidden;
    }

    /* 3. Premium Table Styles */
    .premium-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
    }

        .premium-table thead th {
            background-color: #f9fafb;
            padding: 16px 24px;
            font-size: 0.75rem;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            color: #6b7280;
            border-bottom: 2px solid #e5e7eb;
        }

        .premium-table tbody td {
            padding: 16px 24px;
            vertical-align: middle;
            border-bottom: 1px solid #f3f4f6;
            color: #374151;
            font-size: 0.95rem;
        }

        .premium-table tbody tr:hover td {
            background-color: #f8fafc;
        }

    /* 4. Avatar Styling */
    .member-avatar {
        width: 45px;
        height: 45px;
        border-radius: 50%;
        object-fit: cover;
        border: 2px solid #fff;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }

    .avatar-placeholder {
        width: 45px;
        height: 45px;
        border-radius: 50%;
        background-color: #f3f4f6;
        color: #9ca3af;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.2rem;
        border: 1px solid #e5e7eb;
    }

    /* 5. Search Input */
    .search-input {
        border: 2px solid #eee;
        border-radius: 8px;
        padding: 10px 15px;
        width: 100%;
        transition: 0.3s;
    }

        .search-input:focus {
            border-color: #c5a059;
            outline: none;
        }
</style>

<div class="container py-4">

    <div class="page-header-card">
        <div style="z-index: 1;">
            <h2 class="fw-bold mb-1" style="font-family: 'Playfair Display', serif;">Member Directory</h2>
            <p class="mb-0 text-white-50">View and manage registered customer accounts.</p>
        </div>
        <div class="d-none d-md-block" style="z-index: 1;">
            <div class="bg-white text-dark rounded-circle d-flex align-items-center justify-content-center shadow-sm" style="width: 50px; height: 50px;">
                <i class="fas fa-users fa-lg" style="color: #1a3c1e;"></i>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-6">
            <div class="input-group">
                <span class="input-group-text bg-white border-end-0 border-2" style="border-color: #eee;">
                    <i class="fas fa-search text-muted"></i>
                </span>
                <input type="text" id="memberSearch" placeholder="Search members by name, email or phone..." class="search-input border-start-0 ps-0">
            </div>
        </div>
        <div class="col-md-6 text-md-end align-self-center">
            <span class="text-muted small fw-bold">Total Members: @Model.Count</span>
        </div>
    </div>

    <div class="table-card">
        <div class="table-responsive">
            <table class="premium-table">
                <thead>
                    <tr>
                        <th style="width: 80px;">Profile</th>
                        <th>Member Details</th>
                        <th>Contact Number</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="4" class="text-center py-5 text-muted">
                                <i class="fas fa-user-slash fa-3x mb-3 text-light-emphasis"></i>
                                <p class="mb-0">No members found.</p>
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var m in Model)
                        {
                            <tr>
                                <td>
                                    @if (!string.IsNullOrEmpty(m.PhotoURL))
                                    {
                                        <img src="/photos/@m.PhotoURL" alt="@m.Name" class="member-avatar">
                                    }
                                    else
                                    {
                                        <div class="avatar-placeholder">
                                            <i class="fas fa-user"></i>
                                        </div>
                                    }
                                </td>

                                <td>
                                    <div class="fw-bold text-dark">@m.Name</div>
                                    <div class="text-muted small">
                                        <i class="far fa-envelope me-1"></i> @m.Email
                                    </div>
                                </td>

                                <td>
                                    @if (!string.IsNullOrEmpty(m.Phone))
                                    {
                                        <span class="fw-medium text-dark">@m.Phone</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted small">Not provided</span>
                                    }
                                </td>

                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section foot {
    <script>
        // Simple Client-Side Search (Optional enhancement)
        $("#memberSearch").on("keyup", function() {
            var value = $(this).val().toLowerCase();
            $(".premium-table tbody tr").filter(function() {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    </script>
}