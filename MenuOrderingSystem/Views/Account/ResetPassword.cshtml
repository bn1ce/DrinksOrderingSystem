@using MenuOrderingSystem.Models.ViewModels
@model ResetPasswordVM

@{
    ViewBag.Title = "Account | Reset Password";
}

<style>
    body {
        background: url('/Images/homebg.png') no-repeat center center fixed;
        background-size: cover;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin: 0;
        padding: 0;
    }

    .profile-card {
        max-width: 500px;
        background: linear-gradient(135deg, rgba(255,255,255,0.95) 0%, rgba(250,250,252,0.95) 100%);
        border: 1px solid rgba(255,255,255,0.3);
        backdrop-filter: blur(10px);
        position: relative;
        overflow: hidden;
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    }

    .profile-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255,255,255,0.4), transparent);
        transition: left 0.6s;
    }

    .profile-card:hover::before {
        left: 100%;
    }

    .profile-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 20px 40px rgba(0,0,0,0.15), 0 0 0 1px rgba(255,255,255,0.3);
    }

    .form-control {
        border: 1px solid #dee2e6;
        border-radius: 8px;
        padding: 12px 15px;
        font-size: 16px;
        transition: all 0.3s ease;
        width: 100%;
        color: #6c757d; /* Grey text color */
    }

    .form-control:focus {
        border-color: #667eea;
        box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
        outline: none;
        color: #495057; /* Darker grey on focus */
    }

    .form-control::placeholder {
        color: #adb5bd; /* Light grey placeholder */
    }

    .validation-message {
        color: #dc3545;
        font-size: 14px;
        margin-top: 5px;
        display: block;
    }

    .alert-danger {
        border-radius: 8px;
        border: 1px solid #f5c6cb;
        background: linear-gradient(135deg, #f8d7da 0%, #f5c6cb 100%);
        color: #721c24; /* Dark red text */
    }

    .btn-premium {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        color: white;
        font-weight: 600;
        letter-spacing: 0.5px;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
        text-decoration: none;
        display: inline-block;
        padding: 12px 30px;
    }

    .btn-premium::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
        transition: left 0.6s;
    }

    .btn-premium:hover::before {
        left: 100%;
    }

    .btn-premium:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(102, 126, 234, 0.4);
        color: white;
        text-decoration: none;
    }

    .btn-outline-premium {
        border: 2px solid #667eea;
        color: #667eea;
        font-weight: 600;
        letter-spacing: 0.5px;
        transition: all 0.3s ease;
        background: transparent;
        text-decoration: none;
        display: inline-block;
        padding: 12px 30px;
    }

    .btn-outline-premium:hover {
        background: #667eea;
        color: white;
        transform: translateY(-2px);
        box-shadow: 0 6px 15px rgba(102, 126, 234, 0.3);
        text-decoration: none;
    }

    .glow-text {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        font-weight: 700;
        margin: 0;
    }

    .floating {
        animation: floatingAnim 3s ease-in-out infinite;
    }

    @@keyframes floatingAnim {
        0%, 100% {
            transform: translateY(0);
        }
        50% {
            transform: translateY(-10px);
        }
    }

    .divider {
        height: 1px;
        background: linear-gradient(90deg, transparent, rgba(0,0,0,0.1), transparent);
        margin: 20px 0;
        border: 0;
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .profile-card {
        animation: fadeInUp 0.8s ease-out;
    }

    .auth-logo img {
        max-height: 70px;
        filter: drop-shadow(0 4px 8px rgba(0,0,0,0.1));
        display: block;
        margin: 0 auto;
    }

    .info-row {
        padding: 15px 0;
        border-radius: 12px;
        transition: all 0.3s ease;
        border: 1px solid transparent;
        margin: 0;
    }

    .info-row:hover {
        background: rgba(255,255,255,0.7);
        border-color: rgba(0,0,0,0.1);
        transform: translateX(5px);
    }

    .reset-icon {
        font-size: 4rem;
        margin-bottom: 1rem;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    /* Grey text styles */
    .text-grey {
        color: #6c757d !important;
    }

    .text-grey-light {
        color: #adb5bd !important;
    }

    .text-grey-dark {
        color: #495057 !important;
    }

    .instruction-text {
        color: #6c757d;
        font-size: 0.95rem;
        line-height: 1.5;
    }

    .support-text {
        color: #6c757d;
        font-size: 0.85rem;
    }
</style>

<div class="container mt-4 d-flex justify-content-center">
    <div class="profile-card shadow-lg p-4 rounded-4 floating">
        <div class="auth-logo text-center mb-4">
            <img src="~/images/logo.png" alt="CHAGEE Logo">
        </div>

        <h1 class="text-center h4 mb-4 glow-text">Reset Your Password</h1>

        <div class="text-center mb-4">
            <div class="reset-icon">🔑</div>
            <p class="instruction-text">Enter your email address and we'll send you a link to reset your password.</p>
        </div>

        <div class="divider"></div>

        <form method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4"></div>

            <div class="px-2">
                <!-- Email Field -->
                <div class="info-row mb-4">
                    <label asp-for="Email" class="text-grey-dark small mb-2 d-flex align-items-center">
                        📧 Email Address
                    </label>
                    <input asp-for="Email" class="form-control" autofocus type="email" 
                           placeholder="Enter your registered email address">
                    <span asp-validation-for="Email" class="validation-message"></span>
                </div>

                <div class="divider"></div>

                <!-- Buttons -->
                <div class="info-row mb-4 d-flex justify-content-center gap-3">
                    <button type="submit" class="btn btn-premium rounded-3 shadow-sm"
                            style="letter-spacing: .5px; min-width: 140px;">
                        📧 Send Reset Link
                    </button>
                    <button type="reset" class="btn btn-outline-premium rounded-3 shadow-sm"
                            style="letter-spacing: .5px; min-width: 140px;">
                        🔄 Clear
                    </button>
                </div>

                <!-- Back to Login Link -->
                <div class="info-row mb-4 d-flex justify-content-center">
                    <a href="/Account/Login"
                       class="btn btn-outline-premium w-50 py-2 rounded-3 shadow-sm text-center"
                       style="letter-spacing: .5px; border-width:2px;">
                        ← Back to Login
                    </a>
                </div>

                <!-- Support Text -->
                <div class="text-center mt-4">
                    <small class="support-text">
                        Can't access your email? <a href="/Contact" class="text-decoration-none" style="color: #667eea;">Contact support</a>
                    </small>
                </div>
            </div>
        </form>
    </div>
</div>

<script>
    // Add subtle interactive effects
    document.addEventListener('DOMContentLoaded', function() {
        const card = document.querySelector('.profile-card');
        const form = document.querySelector('form');

        // Parallax effect on mouse move
        if (card) {
            document.addEventListener('mousemove', function(e) {
                const x = (window.innerWidth - e.pageX * 2) / 100;
                const y = (window.innerHeight - e.pageY * 2) / 100;
                card.style.transform = `translateY(-5px) rotateX(${y}deg) rotateY(${x}deg)`;
            });
        }

        // Form submission enhancement
        if (form) {
            form.addEventListener('submit', function() {
                const submitBtn = this.querySelector('button[type="submit"]');
                if (submitBtn) {
                    submitBtn.innerHTML = '⏳ Sending...';
                    submitBtn.disabled = true;
                }
            });
        }
    });
</script>