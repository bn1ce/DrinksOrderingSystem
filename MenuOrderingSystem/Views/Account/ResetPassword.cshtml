@using MenuOrderingSystem.Models.ViewModels
@model ResetPasswordVM

@{
    ViewBag.Title = "Reset Password";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="text-center mb-4">
    <h2 class="auth-title fw-bold" style="color: #2d5a27;">Reset Password</h2>
    <p class="text-muted small px-4">
        Enter your registered email address below, and we'll send you a secure link to reset your password.
    </p>
</div>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger small mb-3 text-center bg-light p-2 rounded"></div>

    <div class="form-group mb-4">
        <label asp-for="Email" class="form-label small text-muted text-uppercase fw-bold ms-1">Email Address</label>
        <div class="input-group">
            <span class="input-group-text bg-white border-end-0 text-muted">
                <i class="fas fa-envelope"></i>
            </span>
            <input asp-for="Email" class="form-control border-start-0 ps-0" placeholder="name@example.com" autofocus />
        </div>
        <span asp-validation-for="Email" class="text-danger small text-start d-block mt-1"></span>
    </div>

    <button type="submit" class="btn-auth shadow hover-lift mb-3">
        Send Reset Link <i class="fas fa-paper-plane ms-2"></i>
    </button>

    <a href="/Account/Login" class="btn btn-outline-secondary w-100 rounded-3 py-2 border-0" style="font-weight: 600;">
        <i class="fas fa-arrow-left me-2"></i> Back to Login
    </a>
</form>

@section foot {
    <script>
        // Clean validation
        $.validator.setDefaults({ ignore: '' });

        // Add loading state on submit
        document.querySelector('form').addEventListener('submit', function() {
            if ($(this).valid()) {
                const btn = this.querySelector('button[type="submit"]');
                const originalText = btn.innerHTML;
                btn.disabled = true;
                btn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span> Sending...';

                // Optional: Restore after timeout if no redirect happens (safety net)
                setTimeout(() => {
                    btn.disabled = false;
                    btn.innerHTML = originalText;
                }, 5000);
            }
        });
    </script>

    <style>
        /* Shared Styles matching Login/Register */
        .input-group-text {
            border-color: #e0e0e0;
            border-top-left-radius: 12px;
            border-bottom-left-radius: 12px;
            padding-left: 15px;
        }

        .form-control {
            border-color: #e0e0e0;
            border-top-right-radius: 12px !important;
            border-bottom-right-radius: 12px !important;
            padding-left: 10px;
            height: 50px;
        }

        .input-group:focus-within .input-group-text {
            border-color: #c5a059;
            color: #2d5a27 !important;
        }

        .input-group:focus-within .form-control {
            border-color: #c5a059;
            box-shadow: none;
        }

        .hover-lift:hover {
            transform: translateY(-2px);
            transition: 0.3s;
        }
    </style>
}