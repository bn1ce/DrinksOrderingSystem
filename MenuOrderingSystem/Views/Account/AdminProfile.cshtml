@model MenuOrderingSystem.Models.Admin
@{
    ViewBag.Title = "Admin | Profile";
}

<style>
    body {
        background: url('/Images/homebg.png') no-repeat center center fixed;
        background-size: cover;
    }
</style>

<div class="container mt-4 d-flex justify-content-center">
    <div class="profile-card shadow-lg p-4 rounded-4"
         style="max-width: 600px;
                background: linear-gradient(135deg, rgba(255,255,255,0.9) 0%, rgba(247,247,249,0.9) 100%);
                border: 1px solid #e5e5e5;">

        <div class="mb-4 text-center" style="font-weight: 700; letter-spacing: 1px; color:#333;">
            <div style="font-size: 2rem;">🛡️</div>

            <div class="auth-logo text-center mb-4">
                <img src="~/images/logo.png" alt="CHAGEE Logo" style="max-height: 60px;" />
            </div>

            <div class="h4">Admin Account Settings</div>
        </div>

        <div class="text-center mb-3" style="font-weight: 500">
            <p class="mb-0">Administrator Profile</p>
        </div>

        <div class="px-2">
            <div class="info-row mb-3">
                <label class="text-muted small">Email</label>
                <p class="fs-5 fw-semibold mb-0">@Model.Email</p>
            </div>

            <div class="info-row mb-3">
                <label class="text-muted small">Name</label>
                <p class="fs-5 fw-semibold mb-0">@Model.Name</p>
            </div>

            <div class="info-row mb-4">
                <label class="text-muted small">Phone</label>
                <p class="fs-5 fw-semibold mb-0">@Model.Phone</p>
            </div>

            <div class="info-row mb-4 d-flex justify-content-center">
                <a href="/Admin/Dashboard"
                   class="btn btn-outline-dark w-50 py-2 rounded-3 shadow-sm text-center"
                   style="letter-spacing: .5px; border-width:2px;">
                    📊 Go to Dashboard
                </a>
            </div>

            <div class="info-row mb-4 d-flex justify-content-center">
                <a href="/Account/UpdatePassword"
                   class="btn btn-outline-dark w-50 py-2 rounded-3 shadow-sm text-center"
                   style="letter-spacing: .5px; border-width:2px;">
                    🔑 Change Password
                </a>
            </div>

            <div class="text-center mt-4">
                <a href="/Account/Logout">Log out </a>
            </div>


        </div>
    </div>
</div>