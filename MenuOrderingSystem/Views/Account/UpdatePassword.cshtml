@using MenuOrderingSystem.Models.ViewModels
@model UpdatePasswordVM

@{
    ViewBag.Title = "Change Password";
}

<style>
    /* Premium Page Background */
    body {
        background: #f4f5f7;
        font-family: 'Lato', sans-serif;
    }

    /* Main Card */
    .security-card {
        background: #ffffff;
        border-radius: 24px;
        box-shadow: 0 20px 50px rgba(0,0,0,0.08);
        overflow: hidden;
        border: 1px solid rgba(0,0,0,0.05);
        max-width: 550px;
        width: 100%;
        position: relative;
    }

    /* Header Bar */
    .security-header {
        background: linear-gradient(135deg, #2d5a27 0%, #1a3c1e 100%);
        padding: 40px 30px;
        text-align: center;
        color: white;
    }

    /* Icon Container at Top */
    .lock-icon-container {
        width: 80px;
        height: 80px;
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(5px);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 20px;
        border: 1px solid rgba(255, 255, 255, 0.2);
    }

    .page-title {
        font-family: 'Playfair Display', serif;
        font-weight: 700;
        margin: 0;
        letter-spacing: 1px;
    }

    /* Input Group Styling */
    .form-group-custom {
        margin-bottom: 25px;
    }

    .form-label-custom {
        font-size: 0.8rem;
        color: #888;
        text-transform: uppercase;
        font-weight: 700;
        letter-spacing: 0.5px;
        margin-bottom: 8px;
        display: block;
    }

    .input-group-text-custom {
        background: #f8f9fa;
        border: 2px solid #eee;
        border-right: none;
        border-top-left-radius: 12px;
        border-bottom-left-radius: 12px;
        color: #aaa;
        padding-left: 18px;
    }

    .form-control-custom {
        background: #fcfcfc;
        border: 2px solid #eee;
        border-left: none;
        border-top-right-radius: 12px;
        border-bottom-right-radius: 12px;
        padding: 12px 15px;
        font-size: 1rem;
        transition: all 0.3s;
        height: 50px;
    }

    .input-group:focus-within .input-group-text-custom {
        border-color: #c5a059;
        background: #fff;
        color: #c5a059;
    }

    .input-group:focus-within .form-control-custom {
        border-color: #c5a059;
        background: #fff;
        box-shadow: none;
    }

    /* Buttons */
    .btn-update {
        background: linear-gradient(135deg, #c5a059 0%, #aa853c 100%);
        color: #fff;
        border: none;
        padding: 14px;
        border-radius: 50px;
        font-weight: 600;
        letter-spacing: 0.5px;
        width: 100%;
        transition: 0.3s;
        box-shadow: 0 8px 20px rgba(197, 160, 89, 0.3);
    }

        .btn-update:hover {
            transform: translateY(-2px);
            box-shadow: 0 12px 25px rgba(197, 160, 89, 0.4);
            background: linear-gradient(135deg, #d4af37 0%, #b88a3b 100%);
            color: #fff;
        }

    .back-link {
        color: #888;
        font-size: 0.9rem;
        text-decoration: none;
        font-weight: 600;
        display: inline-flex;
        align-items: center;
        transition: 0.2s;
        margin-top: 20px;
    }

        .back-link:hover {
            color: #2d5a27;
            transform: translateX(-3px);
        }
</style>

<div class="container py-5 d-flex justify-content-center align-items-center" style="min-height: 85vh;">

    <div class="security-card">
        <div class="security-header">
            <div class="lock-icon-container">
                <i class="fas fa-shield-alt fa-2x"></i>
            </div>
            <h2 class="page-title">Security Check</h2>
            <p class="text-white-50 small mb-0">Update your password to stay safe</p>
        </div>

        <div class="p-4 pt-5">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger small rounded-3 mb-4 text-center"></div>

                <div class="form-group-custom">
                    <label asp-for="Current" class="form-label-custom">Current Password</label>
                    <div class="input-group">
                        <span class="input-group-text input-group-text-custom">
                            <i class="fas fa-key"></i>
                        </span>
                        <input asp-for="Current" class="form-control form-control-custom" type="password" placeholder="••••••" autofocus>
                    </div>
                    <span asp-validation-for="Current" class="text-danger small mt-1 d-block"></span>
                </div>

                <div class="form-group-custom">
                    <label asp-for="New" class="form-label-custom">New Password</label>
                    <div class="input-group">
                        <span class="input-group-text input-group-text-custom">
                            <i class="fas fa-lock"></i>
                        </span>
                        <input asp-for="New" class="form-control form-control-custom" type="password" placeholder="Enter new password">
                    </div>
                    <span asp-validation-for="New" class="text-danger small mt-1 d-block"></span>
                </div>

                <div class="form-group-custom">
                    <label asp-for="Confirm" class="form-label-custom">Confirm New Password</label>
                    <div class="input-group">
                        <span class="input-group-text input-group-text-custom">
                            <i class="fas fa-check-circle"></i>
                        </span>
                        <input asp-for="Confirm" class="form-control form-control-custom" type="password" placeholder="Confirm new password">
                    </div>
                    <span asp-validation-for="Confirm" class="text-danger small mt-1 d-block"></span>
                </div>

                <div class="mt-4">
                    <button type="submit" class="btn-update">
                        <i class="fas fa-sync-alt me-2"></i> Update Password
                    </button>

                    <div class="text-center">
                        <a href="/Account/Profile" class="back-link">
                            <i class="fas fa-arrow-left me-2"></i> Return to Profile
                        </a>
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>