@model MenuOrderingSystem.Models.Member
@{
    ViewBag.Title = "My Profile";
}

<style>
    :root {
        --chagee-green: #2d5a27;
        --chagee-light: #e8f5e9;
        --chagee-gold: #c5a059;
    }

    body {
        background-color: #f8f9fa;
        font-family: 'Lato', sans-serif;
    }

    /* Main Container Card */
    .profile-dashboard {
        background: #fff;
        border-radius: 30px;
        overflow: hidden;
        box-shadow: 0 30px 60px rgba(45, 90, 39, 0.15);
        min-height: 600px;
        position: relative;
    }

    /* LEFT COLUMN: Identity (Green) */
    .identity-sidebar {
        background: linear-gradient(180deg, var(--chagee-green) 0%, #1e3c1a 100%);
        color: white;
        text-align: center;
        padding: 50px 30px;
        position: relative;
    }

        /* Decorative Circle */
        .identity-sidebar::after {
            content: '';
            position: absolute;
            bottom: -50px;
            left: -50px;
            width: 200px;
            height: 200px;
            border-radius: 50%;
            background: rgba(255,255,255,0.05);
        }

    .profile-img-container {
        position: relative;
        width: 150px;
        height: 150px;
        margin: 0 auto 25px;
    }

    .profile-img-dashboard {
        width: 150px;
        height: 150px;
        border-radius: 50%;
        object-fit: cover;
        border: 5px solid rgba(255,255,255,0.2);
        box-shadow: 0 10px 20px rgba(0,0,0,0.2);
        transition: transform 0.3s;
    }

        .profile-img-dashboard:hover {
            transform: scale(1.05);
            border-color: var(--chagee-gold);
        }

    .edit-photo-btn {
        position: absolute;
        bottom: 5px;
        right: 5px;
        background: var(--chagee-gold);
        color: white;
        width: 35px;
        height: 35px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        border: 2px solid #fff;
        cursor: pointer;
        transition: 0.2s;
        text-decoration: none;
    }

    .member-badge-pill {
        background: rgba(255,255,255,0.1);
        color: #fff;
        padding: 8px 20px;
        border-radius: 50px;
        font-size: 0.8rem;
        letter-spacing: 1px;
        backdrop-filter: blur(5px);
        display: inline-block;
        margin-top: 15px;
        border: 1px solid rgba(255,255,255,0.2);
    }

    /* RIGHT COLUMN: Details (White) */
    .details-panel {
        padding: 50px;
        background: #fff;
    }

    .section-title {
        color: #2c3e50;
        font-family: 'Playfair Display', serif;
        font-weight: 700;
        margin-bottom: 30px;
        position: relative;
        padding-bottom: 10px;
    }

        .section-title::after {
            content: '';
            position: absolute;
            left: 0;
            bottom: 0;
            width: 50px;
            height: 3px;
            background: var(--chagee-green);
        }

    /* Info Cards */
    .info-card {
        background: #fff;
        border: 1px solid #f0f0f0;
        border-radius: 15px;
        padding: 20px;
        margin-bottom: 20px;
        transition: 0.3s;
        display: flex;
        align-items: center;
    }

        .info-card:hover {
            border-color: var(--chagee-light);
            box-shadow: 0 10px 30px rgba(0,0,0,0.05);
            transform: translateX(5px);
        }

    .icon-box {
        width: 50px;
        height: 50px;
        background: var(--chagee-light);
        color: var(--chagee-green);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.2rem;
        margin-right: 20px;
    }

    .label-text {
        font-size: 0.75rem;
        color: #999;
        text-transform: uppercase;
        font-weight: 600;
        margin-bottom: 4px;
    }

    .value-text {
        font-size: 1rem;
        color: #333;
        font-weight: 700;
    }

    /* Action Buttons Area */
    .action-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 20px;
        margin-top: 40px;
    }

    .btn-modern {
        padding: 15px;
        border-radius: 12px;
        text-align: center;
        text-decoration: none;
        font-weight: 600;
        transition: 0.3s;
        border: none;
    }

    .btn-modern-primary {
        background: var(--chagee-green);
        color: white;
        box-shadow: 0 8px 20px rgba(45, 90, 39, 0.2);
    }

        .btn-modern-primary:hover {
            background: #234a20;
            transform: translateY(-3px);
            color: white;
        }

    .btn-modern-outline {
        background: #fff;
        color: var(--chagee-green);
        border: 2px solid var(--chagee-light);
    }

        .btn-modern-outline:hover {
            border-color: var(--chagee-green);
            background: var(--chagee-light);
            color: var(--chagee-green);
        }
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">

            <div class="profile-dashboard row g-0">

                <div class="col-md-5 identity-sidebar d-flex flex-column justify-content-center">

                    <div class="profile-img-container">
                        <img src="/photos/@Model.PhotoURL" alt="@Model.Name" class="profile-img-dashboard">
                        <a href="/Account/UpdateProfile" class="edit-photo-btn" title="Change Photo">
                            <i class="fas fa-camera"></i>
                        </a>
                    </div>

                    <h2 class="fw-bold mb-1">@Model.Name</h2>
                    <p class="opacity-75 mb-3">@Model.Email</p>

                    <div>
                        <span class="member-badge-pill">
                            <i class="fas fa-crown me-2 text-warning"></i> PREMIUM MEMBER
                        </span>
                    </div>

                   
                </div>

                <div class="col-md-7 details-panel">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h3 class="section-title mb-0">Personal Details</h3>
                        <a href="/Account/Logout" class="text-danger small fw-bold text-decoration-none bg-light px-3 py-1 rounded-pill">
                            <i class="fas fa-sign-out-alt me-1"></i> Logout
                        </a>
                    </div>

                    <div class="info-card">
                        <div class="icon-box">
                            <i class="fas fa-envelope"></i>
                        </div>
                        <div>
                            <div class="label-text">Email Address</div>
                            <div class="value-text">@Model.Email</div>
                        </div>
                    </div>

                    <div class="info-card">
                        <div class="icon-box">
                            <i class="fas fa-phone-alt"></i>
                        </div>
                        <div>
                            <div class="label-text">Phone Number</div>
                            <div class="value-text">@Model.Phone</div>
                        </div>
                    </div>

                    <div class="action-grid">
                        <a href="/Account/UpdateProfile" class="btn-modern btn-modern-primary">
                            Edit Profile
                        </a>
                        <a href="/Account/UpdatePassword" class="btn-modern btn-modern-outline">
                            Change Password
                        </a>
                    </div>

                    <div class="mt-4 text-center">
                        <small class="text-muted">
                            <i class="fas fa-clock me-1"></i> Member since @DateTime.Now.Year
                        </small>
                    </div>

                </div>

            </div>
        </div>
    </div>
</div>