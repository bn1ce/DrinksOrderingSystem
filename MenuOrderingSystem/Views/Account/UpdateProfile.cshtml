@using MenuOrderingSystem.Models.ViewModels
@model UpdateProfileVM

@{
    ViewBag.Title = "Update Profile";
}

<style>
    /* Premium Page Background */
    body {
        background: #f4f5f7;
        font-family: 'Lato', sans-serif;
    }

    /* Card Styling */
    .edit-card {
        background: #ffffff;
        border-radius: 24px;
        box-shadow: 0 20px 40px rgba(0,0,0,0.08);
        overflow: hidden;
        border: 1px solid rgba(0,0,0,0.05);
        max-width: 550px;
        width: 100%;
        position: relative;
    }

    /* Green Header Bar */
    .card-header-bar {
        background: linear-gradient(135deg, #2d5a27 0%, #1a3c1e 100%);
        /* Top: 30px, Sides: 20px, Bottom: 80px (Extra space for the image) */
        padding: 30px 20px 80px;
        text-align: center;
        position: relative;
    }

    /* Photo Upload Styling */
    .profile-upload-container {
        position: relative;
        width: 140px;
        height: 140px;
        margin: -70px auto 20px; /* Pull up into header */
        z-index: 5;
    }

    .profile-img-preview {
        width: 140px;
        height: 140px;
        border-radius: 50%;
        object-fit: cover;
        border: 5px solid #fff;
        box-shadow: 0 10px 25px rgba(0,0,0,0.15);
        background: #fff;
        transition: all 0.3s ease;
        cursor: pointer;
    }

    /* Overlay for Edit Icon */
    .upload-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        border-radius: 50%;
        background: rgba(0,0,0,0.5);
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0;
        transition: 0.3s;
        cursor: pointer;
        color: #fff;
        font-weight: bold;
        font-size: 1.2rem;
        border: 5px solid transparent; /* Match border size */
    }

    .profile-upload-container:hover .upload-overlay {
        opacity: 1;
    }

    .profile-upload-container:hover .profile-img-preview {
        transform: scale(1.02);
        border-color: #c5a059; /* Gold border on hover */
    }

    /* Typography */
    .page-title {
        font-family: 'Playfair Display', serif;
        color: #fff;
        margin: 0;
        font-weight: 700;
        letter-spacing: 1px;
    }

    /* Form Elements */
    .form-label-custom {
        font-size: 0.85rem;
        color: #888;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        font-weight: 700;
        margin-bottom: 8px;
        display: block;
    }

    .form-control-custom {
        border: 2px solid #eee;
        border-radius: 12px;
        padding: 12px 15px;
        font-size: 1rem;
        transition: 0.3s;
        width: 100%;
        background: #fcfcfc;
    }

        .form-control-custom:focus {
            border-color: #c5a059;
            background: #fff;
            box-shadow: 0 0 0 4px rgba(197, 160, 89, 0.1);
            outline: none;
        }

    .readonly-field {
        background-color: #f8f9fa;
        color: #6c757d;
        cursor: not-allowed;
        border-color: transparent;
    }

    /* Buttons */
    .btn-save {
        background: linear-gradient(135deg, #2d5a27 0%, #234a20 100%);
        color: white;
        border: none;
        padding: 12px 25px;
        border-radius: 50px;
        font-weight: 600;
        letter-spacing: 0.5px;
        transition: 0.3s;
        width: 100%;
        box-shadow: 0 10px 20px rgba(45, 90, 39, 0.2);
    }

        .btn-save:hover {
            transform: translateY(-2px);
            box-shadow: 0 15px 30px rgba(45, 90, 39, 0.3);
            background: linear-gradient(135deg, #356b2e 0%, #2d5a27 100%);
        }

    .btn-reset {
        background: transparent;
        color: #666;
        border: 2px solid #eee;
        padding: 12px 25px;
        border-radius: 50px;
        font-weight: 600;
        transition: 0.3s;
        width: 100%;
    }

        .btn-reset:hover {
            background: #eee;
            color: #333;
        }

    .back-link {
        color: #888;
        font-size: 0.9rem;
        text-decoration: none;
        font-weight: 600;
        display: inline-flex;
        align-items: center;
        transition: 0.2s;
    }

        .back-link:hover {
            color: #2d5a27;
            transform: translateX(-3px);
        }
</style>

<div class="container py-5 d-flex justify-content-center align-items-center" style="min-height: 80vh;">

    <div class="edit-card">
        <div class="card-header-bar">
            <h2 class="page-title">Edit Profile</h2>
            <p class="text-white-50 small mb-4">Keep your details up to date</p>
        </div>

        <div class="px-4 pb-4">
            <form method="post" enctype="multipart/form-data">

                <div class="profile-upload-container" onclick="document.getElementById('fileInput').click()">
                    <img src="/photos/@Model.PhotoURL" alt="Profile" id="profileImage" class="profile-img-preview">

                    <div class="upload-overlay">
                        <i class="fas fa-camera"></i>
                    </div>

                    <input asp-for="Photo" type="file" id="fileInput" accept="image/jpeg,image/png" hidden onchange="previewImage(this)">
                </div>
                <div class="text-center mb-4">
                    <span asp-validation-for="Photo" class="text-danger small"></span>
                </div>

                <div class="row g-3">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger small rounded-3"></div>

                    <div class="col-12">
                        <label asp-for="Email" class="form-label-custom">Email Address</label>
                        <div class="d-flex align-items-center form-control-custom readonly-field">
                            <i class="fas fa-envelope me-2 text-muted"></i>
                            <span>@Model.Email</span>
                        </div>
                    </div>

                    <div class="col-12">
                        <label asp-for="Name" class="form-label-custom">Full Name</label>
                        <input asp-for="Name" class="form-control-custom" placeholder="Enter your full name" autofocus>
                        <span asp-validation-for="Name" class="text-danger small mt-1 d-block"></span>
                    </div>

                    <div class="col-12 mt-4">
                        <div class="row g-2">
                            <div class="col-8">
                                <button type="submit" class="btn-save">
                                    <i class="fas fa-save me-2"></i> Save Changes
                                </button>
                            </div>
                            <div class="col-4">
                                <button type="reset" class="btn-reset">
                                    Reset
                                </button>
                            </div>
                        </div>
                    </div>

                    <div class="col-12 text-center mt-3">
                        <a href="/Account/Profile" class="back-link">
                            <i class="fas fa-arrow-left me-2"></i> Return to Profile
                        </a>
                    </div>
                </div>

            </form>
        </div>
    </div>

</div>

@section foot {
    <script>
        function previewImage(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    document.getElementById('profileImage').src = e.target.result;
                }
                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>
}