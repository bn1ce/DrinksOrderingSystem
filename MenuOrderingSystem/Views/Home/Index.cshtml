@model List<MenuOrderingSystem.Models.Drink>

@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header class="position-relative w-100 d-flex align-items-center justify-content-center text-center text-white"
        style="min-height: 90vh;
               background: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.6)), url('@Url.Content("~/Images/homebg.png")') no-repeat center center;
               background-size: cover;">

    <div class="container position-relative" style="z-index: 2;">
        <div class="mb-3">
            <i class="fas fa-leaf fa-2x" style="color: var(--chagee-gold);"></i>
        </div>

        <h1 class="display-3 fw-bold mb-3" style="font-family: 'Playfair Display', serif; letter-spacing: 2px;">
            Oriental Heritage <br> Modern Taste
        </h1>

        <p class="lead mb-5 fs-4 opacity-75" style="max-width: 600px; margin: 0 auto;">
            Experience the perfect fusion of traditional tea culture and fresh, modern ingredients.
        </p>

        <a href="/Drink/Index" class="btn btn-lg px-5 py-3 rounded-pill text-uppercase fw-bold shadow-lg hover-scale"
           style="background-color: var(--chagee-gold); border: none; color: white; letter-spacing: 1px;">
            Order Now
        </a>
    </div>

    <div class="position-absolute bottom-0 start-50 translate-middle-x mb-4 animate-bounce">
        <i class="fas fa-chevron-down text-white opacity-50"></i>
    </div>
</header>

<section class="py-5 bg-white">
    <div class="container py-5">
        <div class="text-center mb-5">
            <h2 class="fw-bold" style="color: var(--chagee-green);">Why Choose CHAGEE?</h2>
            <div style="width: 60px; height: 3px; background: var(--chagee-gold); margin: 15px auto;"></div>
        </div>

        <div class="row g-4 text-center">
            <div class="col-md-4">
                <div class="p-4 hover-lift">
                    <div class="mb-3">
                        <span class="fa-stack fa-2x">
                            <i class="fas fa-circle fa-stack-2x" style="color: #f4f8f4;"></i>
                            <i class="fas fa-leaf fa-stack-1x" style="color: var(--chagee-green);"></i>
                        </span>
                    </div>
                    <h4 class="fw-bold">Premium Tea Leaves</h4>
                    <p class="text-muted">Sourced directly from high-altitude tea gardens to ensure the freshest aroma.</p>
                </div>
            </div>

            <div class="col-md-4">
                <div class="p-4 hover-lift">
                    <div class="mb-3">
                        <span class="fa-stack fa-2x">
                            <i class="fas fa-circle fa-stack-2x" style="color: #fff9e6;"></i>
                            <i class="fas fa-tint fa-stack-1x" style="color: var(--chagee-gold);"></i>
                        </span>
                    </div>
                    <h4 class="fw-bold">Fresh Milk Only</h4>
                    <p class="text-muted">We use 100% fresh dairy milk. No creamer, no powders, just pure smoothness.</p>
                </div>
            </div>

            <div class="col-md-4">
                <div class="p-4 hover-lift">
                    <div class="mb-3">
                        <span class="fa-stack fa-2x">
                            <i class="fas fa-circle fa-stack-2x" style="color: #fef2f2;"></i>
                            <i class="fas fa-mug-hot fa-stack-1x" style="color: var(--chagee-red);"></i>
                        </span>
                    </div>
                    <h4 class="fw-bold">Handcrafted</h4>
                    <p class="text-muted">Every cup is brewed fresh and handcrafted by our skilled tea masters.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="py-5" style="background-color: #f8f9fa;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="card border-0 shadow-lg overflow-hidden" style="border-radius: 20px;">
                    <div class="row g-0">
                        <div class="col-md-4 bg-white p-5 d-flex flex-column justify-content-center">
                            <h3 class="fw-bold mb-3">Visit Us</h3>
                            <p class="text-muted mb-4">Come experience the ambiance of our flagship store.</p>

                            <div class="d-flex align-items-start mb-3">
                                <i class="fas fa-map-marker-alt mt-1 me-3 text-danger"></i>
                                <div>
                                    <strong>Chagee 霸王茶姬 • Wolo KL</strong><br>
                                    <span class="text-muted small">WOLO Kuala Lumpur, Part of Ground & Mezzanine Floors, Jln Sultan Ismail, Bukit Bintang, 55100 Kuala Lumpur, Federal Territory of Kuala Lumpur</span>
                                </div>
                            </div>

                            <div class="d-flex align-items-center">
                                <i class="fas fa-clock me-3" style="color: var(--chagee-gold);"></i>
                                <span class="text-muted small">Daily: 09:00 AM - 01:00 AM</span>
                            </div>
                        </div>

                        <div class="col-md-8">
                            <div id="map" style="height: 400px; width: 100%;"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .hover-scale:hover {
        transform: scale(1.05);
        transition: transform 0.3s ease;
    }

    .animate-bounce {
        animation: bounce 2s infinite;
    }

    @@keyframes bounce {
        0%, 20%, 50%, 80%, 100% {
            transform: translateX(-50%) translateY(0);
        }

        40% {
            transform: translateX(-50%) translateY(-10px);
        }

        60% {
            transform: translateX(-50%) translateY(-5px);
        }
    }
</style>

@section foot {
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function() {
            // =========================================================
            // 📍 UPDATE YOUR LOCATION HERE
            // =========================================================
            // Replace these numbers with the ones from your Google Link
            var lat = 3.147374062564951;   // Example: Sunway Pyramid (Replace this)
            var lng = 101.71143938135451;  // Example: Sunway Pyramid (Replace this)
            var locationName = "<b>CHAGEE</b><br>WOLO KL";
            // =========================================================

            // 1. Initialize Map
            var map = L.map('map').setView([lat, lng], 16);

            // 2. Add Map Tiles (Light Theme for Premium Look)
            L.tileLayer('https://{s}.basemaps.cartocdn.com/light_all/{z}/{x}/{y}{r}.png', {
                attribution: '&copy; OpenStreetMap contributors',
                maxZoom: 20
            }).addTo(map);

            // 3. Define CHAGEE Custom Marker (Optional: Uses a green hue if available, else standard)
            var standardIcon = L.icon({
                iconUrl: 'https://raw.githubusercontent.com/pointhi/leaflet-color-markers/master/img/marker-icon-2x-green.png',
                shadowUrl: 'https://cdnjs.cloudflare.com/ajax/libs/leaflet/0.7.7/images/marker-shadow.png',
                iconSize: [25, 41],
                iconAnchor: [12, 41],
                popupAnchor: [1, -34],
                shadowSize: [41, 41]
            });

            // 4. Add Marker with Animation
            var marker = L.marker([lat, lng], {icon: standardIcon}).addTo(map);

            marker.bindPopup('<div class="text-center" style="font-family: sans-serif;">' + locationName + '</div>')
                  .openPopup();
        });
    </script>
}